{
  "name": "@sharemystack/monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clear": "rm -f pnpm-lock.yaml && find ./ -type d -and \\( -name node_modules -or -name build -or -name .turbo \\) -exec rm -rf '{}' +",
    "reinstall": "pnpm run clear && pnpm i",
    "rebuild": "pnpm run reinstall && pnpm run build",
    "build": "CI=1 turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "update": "pnpm update -i -r -L",
    "manypkg": "npx @manypkg/cli@latest check"
  },
  "dependencies": {
    "esbuild": "^0.18.4",
    "prettier": "^2.8.8",
    "turbo": "^1.10.3"
  },
  "resolutions": {
    "expo-updates-interface": "0.9.2"
  },
  "packageManager": "pnpm@8.6.1",
  "pnpm": {
    "updateConfig": {
      "ignoreDependencies": [
        "uuid",
        "react-native-web",
        "react-native-svg",
        "react-native-safe-area-context",
        "@shopify/flash-list",
        "@sentry/react-native"
      ]
    }
  },
  "engines": {
    "node": ">=18.16.0"
  }
}
